<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="26dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:onClick="enterNumber"
            android:id="@+id/button_number_1"
            android:background="@color/colorPrimaryLight"
            android:textStyle="bold"
            />
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:onClick="enterNumber"
            android:id="@+id/button_number_2"
            android:background="@color/colorPrimaryLight"
            android:textStyle="bold"/>
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:onClick="enterNumber"
            android:id="@+id/button_number_3"
            android:background="@color/colorPrimaryLight"
            android:textStyle="bold"/>
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:onClick="enterNumber"
            android:id="@+id/button_number_4"
            android:background="@color/colorPrimaryLight"
            android:textStyle="bold"/>
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:onClick="enterNumber"
            android:id="@+id/button_number_5"
            android:background="@color/colorPrimaryLight"
            android:textStyle="bold"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:onClick="backspace"
            android:id="@+id/button_number_back"
            android:background="@color/colorPrimaryLight"
            android:textStyle="bold"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6"
            android:onClick="enterNumber"
            android:id="@+id/button_number_6"
            android:background="@color/colorPrimaryLight"
            android:textStyle="bold"/>
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7"
            android:onClick="enterNumber"
            android:id="@+id/button_number_7"
            android:background="@color/colorPrimaryLight"
            android:textStyle="bold"/>
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8"
            android:onClick="enterNumber"
            android:id="@+id/button_number_8"
            android:background="@color/colorPrimaryLight"
            android:textStyle="bold"/>
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9"
            android:onClick="enterNumber"
            android:id="@+id/button_number_9"
            android:background="@color/colorPrimaryLight"
            android:textStyle="bold"/>
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:onClick="enterNumber"
            android:id="@+id/button_number_0"
            android:background="@color/colorPrimaryLight"
            android:textStyle="bold"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter"
            android:onClick="enterGuess"
            android:id="@+id/button_number_enter"
            android:background="@color/colorPrimaryLight" />
    </LinearLayout>
</LinearLayout>
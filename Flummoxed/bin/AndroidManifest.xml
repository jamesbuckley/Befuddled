<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.buckley.flummoxed"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="21" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:screenOrientation="portrait"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".TitleActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/MyCustomTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main"
            android:parentActivityName=".TitleActivity"
            android:screenOrientation="portrait"
            android:theme="@style/MyCustomTheme"
            android:windowSoftInputMode="stateHidden" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.buckley.flummoxed.TitleActivity" />
        </activity>
        <activity
            android:name=".VictoryActivity"
            android:label="@string/title_activity_victory"
            android:theme="@style/MyCustomTheme" >
        </activity>
        <activity
            android:name=".TryAgainActivity"
            android:label="@string/title_activity_try_again"
            android:theme="@style/MyCustomTheme" >
        </activity>
        <activity
            android:name=".TutorialActivity"
            android:label="@string/title_activity_tutorial"
            android:parentActivityName=".TitleActivity"
            android:theme="@style/MyCustomTheme" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.buckley.flummoxed.TitleActivity" />
        </activity>
        <activity
            android:name=".FeedbackRulesActivity"
            android:label="@string/title_activity_feedback_rules"
            android:parentActivityName=".TutorialActivity"
            android:theme="@style/MyCustomTheme" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.buckley.flummoxed.TutorialActivity" />
        </activity>
        <activity
            android:name=".HardModeTutorial"
            android:label="@string/title_activity_hard_mode_tutorial"
            android:parentActivityName=".FeedbackRulesActivity"
            android:theme="@style/MyCustomTheme" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.buckley.flummoxed.FeedbackRulesActivity" />
        </activity>
    </application>

</manifest>
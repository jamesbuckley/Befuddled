<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.buckley.flummoxed.MainActivity" >

    <EditText
        android:id="@+id/guessBar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:ems="10"
        android:enabled="false"
        android:inputType="none" >

        <requestFocus />
    </EditText>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/showAnswerText1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:ems="10"
                android:enabled="false"
                android:inputType="none" />

            <EditText
                android:id="@+id/showAnswerText2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:ems="10"
                android:enabled="false"
                android:inputType="none" />

            <EditText
                android:id="@+id/showAnswerText3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:ems="10"
                android:enabled="false"
                android:inputType="none" />

            <EditText
                android:id="@+id/showAnswerText4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:ems="10"
                android:enabled="false"
                android:inputType="none" />

            <EditText
                android:id="@+id/showAnswerText5"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:ems="10"
                android:enabled="false"
                android:inputType="none" />

            <EditText
                android:id="@+id/showAnswerText6"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:ems="10"
                android:enabled="false"
                android:inputType="none" />

            <EditText
                android:id="@+id/showAnswerText7"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:ems="10"
                android:enabled="false"
                android:inputType="none" />

            <EditText
                android:id="@+id/showAnswerText8"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:ems="10"
                android:enabled="false"
                android:inputType="none" />

            <EditText
                android:id="@+id/showAnswerText9"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:ems="10"
                android:enabled="false"
                android:inputType="none" />

            <EditText
                android:id="@+id/showAnswerText10"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:ems="10"
                android:enabled="false"
                android:inputType="none" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/buttonNumber0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="enterNumber"
            android:text="@string/button_0"
            android:typeface="normal" />

        <Button
            android:id="@+id/buttonNumber1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="enterNumber"
            android:text="@string/button_1"
            android:typeface="normal" />

        <Button
            android:id="@+id/buttonNumber2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="enterNumber"
            android:text="@string/button_2"
            android:typeface="normal" />

        <Button
            android:id="@+id/buttonNumber3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="enterNumber"
            android:text="@string/button_3"
            android:typeface="normal" />

        <Button
            android:id="@+id/buttonNumber4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="enterNumber"
            android:text="@string/button_4"
            android:typeface="normal" />

        <Button
            android:id="@+id/buttonNumber5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="enterNumber"
            android:text="@string/button_5"
            android:typeface="normal" />

        <Button
            android:id="@+id/buttonNumber6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="enterNumber"
            android:text="@string/button_6"
            android:typeface="normal" />

        <Button
            android:id="@+id/buttonNumber7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="enterNumber"
            android:text="@string/button_7"
            android:typeface="normal" />

        <Button
            android:id="@+id/buttonNumber8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="enterNumber"
            android:text="@string/button_8"
            android:typeface="normal" />

        <Button
            android:id="@+id/buttonNumber9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="enterNumber"
            android:text="@string/button_9"
            android:typeface="normal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/buttonEnterGuess"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1.5"
            android:text="@string/button_enterGuess"
            android:typeface="serif" />

        <Button
            android:id="@+id/buttonBackspace"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="@string/button_backspace"
            android:typeface="serif" />

        <Button
            android:id="@+id/buttonQuit"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="@string/button_quit"
            android:typeface="serif" />
    </LinearLayout>

</LinearLayout>